<!-- PartsBin app resources that may need to be customized
     for different hardware or product builds. -->
<resources>

    <!-- Whether device supports offscreen gestures -->
    <bool name="config_device_supports_gestures">false</bool>

    <!-- Whether device provides panel options -->
    <bool name="config_device_supports_panels">false</bool>

    <!-- Whether device supports vibration options -->
    <bool name="config_device_supports_vibrations">true</bool>

    <!-- Path to devices FastCharge sysfs -->
    <string name="pathFastChargeToggle">/sys/kernel/fast_charge/force_fast_charge</string>

    <!-- Whether device allow changing vibrationlevels -->
    <string name="pathSystemVibStrength">/sys/devices/virtual/timed_output/vibrator/vtg_level</string>
    <integer name="vibratorMinMV">0</integer>
    <integer name="vibratorMaxMV">100</integer>
    <integer name="vibratorDefaultMV">63</integer>

    <!-- Device audio mic gain sysfs -->
    <string name="pathAudioMicGain">/sys/kernel/sound_control_3/gpl_mic_gain</string>

    <!-- Device audio mic min-max-default values -->
    <integer name="audioMicGainMin">0</integer>
    <integer name="audioMicGainMax">40</integer>
    <integer name="audioMicGainDefault">0</integer>

    <!-- Device audio headphone gain sysfs -->
    <string name="pathAudioHeadphoneGain">/sys/kernel/sound_control_3/gpl_headphone_gain</string>

    <!-- Device audio headphone min-max-default values -->
    <integer name="audioHeadphoneGainMin">0</integer>
    <integer name="audioHeadphoneGainMax">40</integer>
    <integer name="audioHeadphoneGainDefault">0</integer>
</resources>
